<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>My Web Application</display-name>
  <context-param>
    <param-name>username</param-name>
    <param-value>{your_database_username}</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>{your_database_password}</param-value>
  </context-param>
  <context-param>
    <param-name>connectionString</param-name>
    <param-value>{your_database_connection_string}</param-value>
  </context-param>
  <servlet>
    <servlet-name>MyAwesomeServlet</servlet-name>
    <servlet-class>mx.uv.fiee.iinf.paradigmas.web.MyAwesomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyAwesomeServlet</servlet-name>
    <url-pattern>/awesome</url-pattern>
  </servlet-mapping>
</web-app>
